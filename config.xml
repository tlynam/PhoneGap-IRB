<?xml version='1.0' encoding='utf-8'?>
<widget id="com.todd.TryMRuby" version="1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>TryMRuby</name>
    <description>
        Try the mruby programming language on your device!  TryMRuby executes mruby (mini Ruby) on your device so you can play around with Ruby code.  mruby is compiled into javascript so no internet connection is required!
    </description>
    <author email="tlynam@gmail.com">
        Todd Lynam
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <plugin name="cordova-plugin-inappbrowser" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="SplashMaintainAspectRatio" value="true" />
</widget>
