<?xml version='1.0' encoding='utf-8'?>
<widget id="com.Todd.TryRuby" version="0.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>TryRuby</name>
    <description>
        Try the Ruby programming language on your device!  TryRuby provides the Ruby REPL IRB on your device so you can play around with Ruby code.  It uses mruby compiled into javascript so no internet connection is required!
    </description>
    <author email="tlynam@gmail.com">
        Todd Lynam
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="SplashMaintainAspectRatio" value="true" />
</widget>
